{
  "browsers": [
    "chrome",
    "ie",
    "firefox"
  ],
  "src": [
    "/src/tests/**/*.js",
    "!/src/main/test/*.js"
  ],
  "reporter": [
    {
      "name": "spec"
    },
    {
      "name": "json",
      "output": "reports/report.json"
    }
  ],
  "screenshots": {
    "path": "/src/tests/screenshots/",
    "takeOnFails": true,
    "pathPattern": "${DATE}_${TIME}/test-${TEST_INDEX}/${USERAGENT}/${FILE_INDEX}.png",
    "fullPage": true
  }
}